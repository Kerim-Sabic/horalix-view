# Horalix View Backend Environment Configuration

# Application
APP_NAME=Horalix View
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=horalix
DB_PASSWORD=horalix
DB_NAME=horalix_view

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# DICOM
DICOM_AE_TITLE=HORALIX_VIEW
DICOM_PORT=11112
DICOM_STORAGE_DIR=./storage/dicom

# AI Models
AI_MODELS_DIR=./models
AI_DEVICE=cuda
AI_BATCH_SIZE=4
AI_MIXED_PRECISION=true

# Compliance
COMPLIANCE_HIPAA_MODE=true
COMPLIANCE_AUDIT_LOGGING_ENABLED=true
COMPLIANCE_ENCRYPTION_AT_REST=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
