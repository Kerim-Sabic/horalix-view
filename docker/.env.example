# Horalix View Docker Environment Configuration
# ==============================================
# Copy this file to .env in the docker/ directory or repo root.
#
# This file is specifically for Docker Compose deployments.
# For local development, see backend/.env.example
#
# Generate a secure SECRET_KEY:
#   Linux/macOS: openssl rand -hex 32
#   Windows:     python -c "import secrets; print(secrets.token_hex(32))"

# ============================================
# REQUIRED SETTINGS
# ============================================

# Security - CRITICAL: Generate a unique key!
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# ============================================
# ENVIRONMENT SETTINGS
# ============================================

# Environment mode: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=true

# Force default users creation (dev-friendly default)
INIT_DEFAULT_USERS=true

# ============================================
# AI SETTINGS
# ============================================

# Device for AI inference: 'cuda', 'cuda:0', or 'cpu'
AI_DEVICE=cpu
AI_EXTRAS=ai
TORCH_INDEX_URL=https://download.pytorch.org/whl/cpu

# AI models/results directories
AI_MODELS_DIR=/app/models
AI_RESULTS_DIR=/app/results
AI_AUTO_LOAD_MODELS=false

# External AI model commands (optional)
AI_EXTERNAL_TIMEOUT_SECONDS=900
AI_EXTERNAL_WORKDIR=
AI_ECHONET_MEASUREMENTS_CMD=python -m app.services.ai.external_runners.echonet_measurements
AI_GIGAPATH_CMD=python -m app.services.ai.external_runners.prov_gigapath
AI_HOVERNET_CMD=python -m app.services.ai.external_runners.hovernet
# Optional: Hugging Face token for Prov-GigaPath weights
HF_TOKEN=

# ============================================
# DICOM SETTINGS
# ============================================

DICOM_AE_TITLE=HORALIX_VIEW
DICOM_PORT=11112
DICOM_STORAGE_DIR=/app/storage/dicom
DICOM_MAX_UPLOAD_SIZE_GB=10

# Demo data (development only)
ENABLE_DEMO_DATA=false

# ============================================
# NOTE: Database and Redis URLs
# ============================================
# DATABASE_URL and REDIS_URL are automatically configured in docker-compose.yml
# to use the container network hostnames (postgres, redis).
# Only override these if you're connecting to external services.
